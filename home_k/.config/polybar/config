format-full-underline = ${self.format-charging-underline}

format-low = "<label-low> <animation-low>"

; Only applies if <ramp-capacity> is used
; ramp-capacity-0 = 
; ramp-capacity-1 = 
; ramp-capacity-2 = 
ramp-capacity-0 = 
ramp-capacity-1 = 
